<form method="post" class="d-inline" action="{{ path('backend_payment_payment_delete', {'id': payment.id}) }}"
      onsubmit="return confirm('Tem a certeza que deseja eliminar este pagamento?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.id) }}">
    <button title="Eliminar" class="btn btn-danger btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-trash"></i>
        </span>
    </button>
</form>