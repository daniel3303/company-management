{% extends 'backend/master.html.twig' %}

{% block title %}Mostrar mapa de horas{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Mostrar mapa de horas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <h3>Selecione o periodo a mostrar</h3>
                            <div class="row justify-content-center">
                                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                                    <form action="{{ path('backend_employee_work_day_show') }}" class="form-horizontal">
                                        <div class="form-group">
                                            <input type="date" class="form-control" name="start" value="{{ "first day of this month"|date("Y-m-d") }}" placeholder="Início"/>
                                        </div>
                                        <div class="form-group">
                                            <input type="date" class="form-control" name="end" value="{{ "today"|date("Y-m-d") }}" placeholder="Fim"/>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">OK</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <!--<div class="card-footer">
                    <a href="{{ path('backend_employee_employee_index') }}" class="btn btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                          <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">Voltar à lista</span>
                    </a>
                </div>-->
            </div>
        </div>
    </div>
{% endblock %}
