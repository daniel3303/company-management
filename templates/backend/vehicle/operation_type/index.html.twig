{% extends 'backend/master.html.twig' %}
{% block title %}Listagem de tipos de operações{% endblock %}
{% block contentTitle %}Listagem de tipos de operações{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Listagem de tipos de operações</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        {% embed 'backend/component/pagination/header.html.twig' with {paginator: operationTypes} %}{% endembed %}
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>{% embed 'backend/component/pagination/ordered_property.html.twig' with {text: "Nome", property: "name"} %}{% endembed %}</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for operationType in operationTypes %}
                                    {# @var operationType \App\Entity\Vehicle\OperationType #}
                                    <tr>
                                        <td>{{ operationType.name }}</td>
                                        <td>
                                            <a href="{{ path('backend_vehicle_operation_type_edit', {'id': operationType.id}) }}"
                                               class="btn btn-info btn-icon-split">
                                                <span class="icon text-white-50">
                                                  <i class="fas fa-edit"></i>
                                                </span>
                                            </a>
                                            {{ include('backend/vehicle/operation_type/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">Não foram encontrados resultados</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nome</th>
                                    <th>Ações</th>
                                </tr>
                            </tfoot>
                        </table>
                        {% embed 'backend/component/pagination/footer.html.twig' with {paginator: operationTypes} %}{% endembed %}
                    </div>

                    <a href="{{ path('backend_vehicle_operation_type_new') }}"
                       class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                          <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Criar novo</span>
                    </a>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
